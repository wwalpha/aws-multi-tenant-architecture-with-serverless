# ----------------------------------------------------------------------------------------------
# AWS Provider
# ----------------------------------------------------------------------------------------------
provider "aws" {
  region = "ap-northeast-2"
}

# ----------------------------------------------------------------------------------------------
# Terraform Settings
# ----------------------------------------------------------------------------------------------
terraform {
  backend "s3" {
    bucket = "onecloud-reserved-bucket1"
    region = "ap-northeast-1"
    key    = "multi-tentant/main.tfstate"
  }

  required_version = ">= 0.12"
}
